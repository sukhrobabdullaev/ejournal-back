# Docker / On-Premise
DEBUG=True
SECRET_KEY=change-this-in-production-use-long-random-string
ALLOWED_HOSTS=localhost,127.0.0.1,web,0.0.0.0

# Database - override in docker-compose
DATABASE_URL=postgres://ejournal:ejournal@db:5432/ejournal

# Redis
CELERY_BROKER_URL=redis://redis:6379/0

# JWT
SIMPLE_JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
SIMPLE_JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Storage - local filesystem (on-premise, no S3)
USE_S3_STORAGE=False
MEDIA_ROOT=media

# Email - SMTP for on-premise
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_USE_PROVIDER=False
EMAIL_HOST=mail.example.local
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@ejournal.local
